<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Product List</title>
</head>
<body>
  <h1>Product List</h1>
  <img src="./images/plant4.PNG">
  <ul>
    <% products.forEach(product => { %>
      <li>
        <img src="<%= product.image %>" alt="<%= product.name %>">
        <h3><%= product.name %></h3>
        <p>Price: $<%= product.price %></p>
      </li>
      <br>
    <% }); %>
  </ul>
</body>
</html>
